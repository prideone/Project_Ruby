<h1>New Shop</h1>

<%= form_for :shop, url: shops_path do |f| %>
  <p>
    <%= f.label :chain %><br>
    <%= f.text_field :chain %>
  </p>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :latitude %><br>
    <%= f.text_field :latitude %>
  </p>

  <p>
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>

  <p>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </p> 
  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p> 
  <p>
    <%= f.label :country_code %><br>
    <%= f.text_field :country_code %>
  </p> 

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', shops_path %>